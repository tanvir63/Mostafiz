<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="setting_preferencescreen_key" >

    <PreferenceCategory android:title="@string/settings_sound_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/sound_key"
            android:summary="@string/sound_summary"
            android:title="@string/sound_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_game_label_title" >
        <ListPreference
            android:defaultValue="easy"
            android:dialogTitle="Game Difficulty Level"
            android:entries="@array/pref_entries_level"
            android:entryValues="@array/pref_entryvalues_level"
            android:key="game_level"
            android:summary="Game Difficulty level"
            android:title="Difficulty level" />
    </PreferenceCategory>

</PreferenceScreen>